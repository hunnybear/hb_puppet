{
	"puppet::server": true,
	"puppet::server_external_nodes": "${dir}/puppet_enc.py",
	"puppet::server_foreman": false,
	"puppet::server_reports": "store",
	"hiera::hierarchy": [
		{
			"name":  "Virtual yaml",
			"path":  "virtual/%{::virtual}.yaml"
		},
        {
        	"name":  "Nodes yaml", 
        	"paths": [
        		"nodes/%{::trusted.certname}.yaml",
        		"nodes/%{::osfamily}.yaml"
        	]
    	},
        {
        	"name":  "Default yaml file", 
        	"path":  "common.yaml"
        }
	]
}